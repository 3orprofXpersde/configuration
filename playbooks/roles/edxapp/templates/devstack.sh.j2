#!/usr/bin/env bash

# {{ ansible_managed }}

source {{ edxapp_app_dir }}/edxapp_env
COMMAND=$1

case $COMMAND in
    open)
        . {{ edxapp_nodeenv_bin }}/activate
        . {{ edxapp_venv_bin }}/activate
        cd {{ edxapp_code_dir }}

        /bin/bash
        ;;
    exec)
        shift

        . {{ edxapp_nodeenv_bin }}/activate
        . {{ edxapp_venv_bin }}/activate
        cd {{ edxapp_code_dir }}

        /bin/bash -c "$*"
esac
